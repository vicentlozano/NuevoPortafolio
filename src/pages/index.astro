---
import Layout from '../layouts/Layout.astro';
import PresentationCard from '../components/PresentationCard.astro';
import TimeLine from '../components/TimeLine.astro';
import SobreMI from '../components/SobreMi.astro';
import Contacto from '../components/Contacto.astro';
---

<Layout title="Vicent Lozano HervÃ¡s">
	<main class="bentos">
		<div class="grid-item1">
		<PresentationCard class="grid-item1" />
		</div>
		<div class = "grid-item2">
		</div>
		<div class = "grid-item3"><TimeLine/>
		</div>
		<div class = "grid-item4"><SobreMI/>
		</div>
		<div class = "grid-item5"><Contacto/>
		</div>
		<div class = "grid-item6">
		</div>
		<div class = "grid-item7">

		
	
	</main>
</Layout>
<style>
	
	.bentos{
		display:grid;
		grid-template-columns: repeat(4, 1fr);
		grid-template-rows: repeat(9, 1fr);
		height: 90vh;
		width: 80vw;
		gap:15px;
	}
	[class^="grid-item"]{
		display:flex;
		color: white;
		justify-content: center;
		align-items: center;
		
		border-radius:13px;
	} 
	.grid-item1{
		background-color: #1a1a1a;
		grid-column: 1 / 4;
		grid-row: 1 / 5;
	}
	.grid-item2{
		background-color: #1a1a1a;
		grid-column: 4 / 5;
		grid-row: 1 / 9;
	}
	.grid-item3{
		background-color: #1a1a1a;
		grid-column: 1 / 2;
		grid-row: 5 / 10;
	}
	.grid-item4{
		background-color: #1a1a1a;
		grid-column: 2 / 4;
		grid-row: 5 / 8;
	}
	.grid-item5{
		background-color: #1a1a1a;
		grid-column: 2 / 3;
		grid-row: 8 / 10;
	}
	.grid-item6{
		background-color: #1a1a1a;
		grid-column: 3 / 4;
		grid-row: 8 / 10;
	}
	.grid-item7{
		background-color: #1a1a1a;
		grid-column: 4 / 5;
		grid-row: 7 / 10;
	}

</style>